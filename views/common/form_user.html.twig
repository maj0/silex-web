<div id="main" role="main" class="container">
	{% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
	{% for alert in alertTypeAvaillable %}
		{% for message in app.session.getFlashBag.get(alert) %}
			<div class="alert alert-{{ alert }}" >
				<button class="close" data-dismiss="alert">×</button>
				{{ message|trans }}
			</div>
		{% endfor %}
	{% endfor %}

<h1>{{ type_oper }} {{ user_type }}</h1>
<form name="user" method="post">
 <div id="user">
  <div class="control-group">
   <label class="control-label" for="user_name">Name</label>
   <div class="controls"><input type="text" id="user_name" name="user[name]" value="{{ user.name }}" required="required"/></div></div>
  <div class="control-group">
   <label class="control-label required" for="user_address">Address</label>
   <div class="controls"><textarea id="user_address" name="user[address]" required="required">{{ user.address }}</textarea></div></div>
  <div class="control-group">
   <label class="control-label required" for="user_email">Email</label>
   <div class="controls"><input type="email" id="user_email" name="user[email]" required="required" value="{{ user.email }}" /></div></div>
  <div class="control-group">
   <label class="control-label" for="user_telephone">Telephone</label>
   <div class="controls"><input type="text" id="user_telephone" name="user[telephone]" value="{{ user.telephone }}"/></div></div>
  <div class="control-group">
   <label class="control-label" for="user_employee_ID">Employee ID</label>
   <div class="controls"><input type="text" id="user_employee_ID" name="user[employee_ID]" value="{{ user.employee_ID }}"/></div></div>
  <div class="control-group">
   <label class="control-label" for="user_role">Role</label>
   <div class="controls">
	<select id="user_role" type="text" name="user[role]">
	 {% for role in roles %}
	 <option value="{{ role.value|e }}" {{ role.selected|e }}>{{ role.name|e }}</option>
	 {% endfor %}
	</select>
   </div></div>
   <div class="control-group">
    <label class="control-label" for="user_organisation_ID">Organisation ID</label>
	<div class="controls"><input type="text" id="user_organisation_ID" name="user[organisation_ID]" value="{{ user.organisation_ID }}" {{ organisation_ID_readonly }}/></div></div>
   <div class="control-group">
    <label class="control-label" for="user_birthdate">Birthdate</label>
	<div class="controls"><input type="text" id="user_birthdate" name="user[birthdate]" value="{{ user.birthdate }}"/></div></div>
   <div class="control-group">
    <label class="control-label" for="user_probation">Probation</label>
	<div class="controls"><input type="checkbox" id="user_probation" name="user[probation]" value="1" {{ user.probation_checked }}/></div></div>
	<div class="control-group">
	 <label class="control-label" for="user_password">Password</label>
	 <div class="controls"><input type="password" id="user_password" name="user[password]" value="{{ user.password }}" required="required"/></div></div>
	<div>
	  <button type="submit" id="user_save" name="user[save]">Save</button>
	  <!--button type="reset" id="user_cancel" name="user[cancel]" onclick="return formCancel()">Cancel</button-->
	</div>
 </div>
</form>

</div>