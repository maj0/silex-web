        <li {% if 'about' == active %}class="active"{% endif %}><a href="/about">About</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
	  {% if last_username %}
        <li><a href="/admin/logout"><span class="glyphicon glyphicon-log-out"></span> Logout {{ last_username }}</a></li>
	  {% else %}
        <li><a href="/"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
