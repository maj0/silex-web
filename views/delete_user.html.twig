<script>
function formCancel() {
//alert('form cancel');
document.location = "{{ _SERVER.HTTP_REFERER }}";
}
</script>
<h1>Delete Uesr</h1>
<form name="user" action="{{ user_delete }}" method="post">
	<input type="hidden" name="id" value="{{ user.id }}" />
    <table>
	 <tr><td><lable>Name:</label><td><input type="text" name="name" value="{{ user.name }}" /></tr>
	 <tr><td><lable>Address:</label><td><input type="text" name="address" value="{{ user.address }}" /></tr>
	 <tr><td><lable>Email:</label><td><input type="text" name="email" value="{{ user.email }}" /></tr>
	 <tr><td><lable>Phone:</label><td><input type="text" name="telephone" value="{{ user.telephone }}" /></tr>
	 <tr><td><lable>Employee ID:</label><td><input type="text" name="employeeID" value="{{ user.employeeID }}" {{ user.employeeID_readonly }}></tr>
	 <tr><td><lable>Role:</label><td>
	 <select type="text" name="role" value="{{ user.role }}" />
	 {% for role in roles %}
	 <option value="{{ role.value|e }}" {{ role.selected|e }}>{{ role.name|e }}</option>
	 {% endfor %}
	 </select>
	 </tr>
	 <tr><td><lable>Organisation ID:</label><td><input type="text" name="organisationID" value="{{ user.organisationID }}" {{ user.organisationID_readonly }} /></tr>
	 <tr><td><lable>Birthdate:</label><td><input type="text" name="birthdate" value="{{ user.birthdate }}" /></tr>
	 <tr><td><lable>Probation:</label><td><input type="checkbox" name="probation" value="1" {{ user.probation_checked }} {{ user.probation_readonly }}/></tr>
	 <tr><td><lable>Password:</label><td><input type="password" name="password" value="{{ user.password }}" /></tr>
	 <tr ><td colspan=2 nowrap="nowrap">
	     <button onclick="return confirm('Are you sure to delete user with id {{ user.id|e }}')">Delete</button>
		 <!--td><input type="reset" value="Cancel" onclick="return formCancel()"></td--></tr>
    </table>
</form>
